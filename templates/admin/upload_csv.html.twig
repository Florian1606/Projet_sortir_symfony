{% extends 'admin/base.html.twig' %}
{% block title %} Incorporation d'un Fichier CSV{% endblock %}
{% block body %}
<div class="content-container mx-2">
    <div class="container-fluid">
        <div class="jumbotron">
            <h1 class="">Importer un fichier CSV</h1>
            <p class="font-italic">Importer un fichier CSV pour incrementer des participants à la base de données</p>
                </div>
        {% for label,messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    <form method="post" action="" class="form-horizontal" role="form" enctype="multipart/form-data">
        {{ form_errors(formUploadCSV) }}
        <div class="form-group" style="margin-left: 500px;">
            {{ form_label(formUploadCSV.csvFile, null, ) }}
            <div class="col-sm-4">
                {{ form_errors(formUploadCSV.csvFile,{ 'attr':  {'class': 'form-control'}}) }}
                {{ form_widget(formUploadCSV.csvFile,{ 'attr':  {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="row text-center mt-4">
            {{ form_end(formUploadCSV, { 'attr':  {'class': 'btn btn-primary'}}) }}
        </div>
    </form>
</div>

{% endblock body %}












