{% extends 'admin/base.html.twig' %}
{% block title %}Gestion des participants{% endblock %}

{% block body %}
    <div class="content-container mx-2">
        <div class="container-fluid">
            <div class="jumbotron">
                <h1 class="">Ajouter le nom d'un site</h1>
                <p class="font-italic">Tapez le nom d'un site que vous voulez incorporer.</p>

                <div>
                    {% form_theme formAjoutSite 'bootstrap_5_horizontal_layout.html.twig' %}
                    {{ form(formAjoutSite) }}
                </div>



            </div>
            {% for label,messages in app.flashes %}
            {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
            {% endfor %}
            {% endfor %}
        </div>
    </div>
            {% endblock %}