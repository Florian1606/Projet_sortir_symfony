{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectée en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col">

            </div>
            <div class="col">
                <div class="row text-center mt-4">
                    <h1><span class="badge bg-secondary">Connectez-vous</span></h1>


                    <div></div>
                    <div></div>
                    <h3><span class="badge bg-secondary">Identifiez-vous</span></h3>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>


                    <h3><span class="badge bg-secondary">Mot de passe</span></h3>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>


                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>


                    <button class="btn btn-lg btn-primary" type="submit">
                        Connexion
                    </button>
                </div>
            </div>
            <div class="col">

            </div>
        </div>
    </div>


</form>
{% endblock %}
