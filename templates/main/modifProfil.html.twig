{% extends 'base.html.twig' %}

{% block title %}
	<title>Mon Profil</title>
{% endblock %}


{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<div class="row text-center mt-4">
		<h2>Mon profil</h2>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-3">
				<img src="{{ asset('uploads/avatars/' ~ app.user.avatarFilename)}}" class="img-thumbnail img-fluid" alt="..." max-width="200" max-height="100">
			</div>
			<div class="col">
				<div class="row mt-4">
					<div>
						{% form_theme formProfil 'bootstrap_5_horizontal_layout.html.twig' %}
						{{ form_start(formProfil) }}
					<div class="alerte alert-danger" {{ form_widget(formProfil) }}</div>
						{{ form_end(formProfil) }}
					</div>

				</div>
			</div>
		</div>

	</div>
	<div style="text-align: center;"><a href="{{ path('main') }}" class="btn-lg btn-primary" style="width:100px;height:50px;position : absolute">Annuler</a></div>

{% endblock %}
